<?xml version="1.0"?><tsung loglevel="notice" version="1.0">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="ec2-52-11-245-49.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
  </load>

  <options>
    <option name="glocal_ack_timeout" value="2000"/>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">
        Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4
      </user_agent>
    </option>
  </options>

  <sessions>
    <session name="critical-path" probability="100" type="ts_http">
      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>
      
      <thinktime random="true" value="1"/>
      
      <request>
        <http url="/users/sign_up" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="1"/>

      <setdynvars sourcetype="random_number" start="100000" end="999999">
        <var name="random_email"/>
      </setdynvars>

      <request subst="true">
        <http url="/users" version="1.1" contents="utf8=%E2%9C%93&amp;user%5Bname%5D=test_name&amp;user%5Bemail%5D=test%%_random_email%%%40airbooks.com&amp;user%5Bpassword%5D=tsungtsung&amp;user%5Bpassword_confirmation%5D=tsungtsung&amp;commit=Sign+up" method="POST">
        </http>
      </request>

      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="1"/>

      <request>
        <http url="/books/new" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="1"/>

      <setdynvars sourcetype="random_number" start="100000" end="999999">
        <var name="random_title"/>
      </setdynvars>

      <setdynvars sourcetype="random_string" length="8">
        <var name="random_first_name"/>
      </setdynvars>
      
      <setdynvars sourcetype="random_string" length="8">
        <var name="random_last_name"/>
      </setdynvars>
      
      <setdynvars sourcetype="random_number" start="1000000000" end="9999999999">
        <var name="random_isbn"/>
      </setdynvars>

      <request subst="true">
        <dyn_variable name="created_book_url" re="[Ll]ocation: (http://.*)\r"/>
        <dyn_variable name="created_book_id" re="[Ll]ocation: http://.*/books/(.*)\r"/>
        <http url="/books" version="1.1" method="POST" contents="utf8=%E2%9C%93&amp;book%5Btitle%5D=Book+%%_random_title%%&amp;book%5Bauthor%5D=%%_random_first_name%%+%%_random_last_name%%&amp;book%5Bgenre%5D=Non-fiction&amp;book%5Bisbn%5D=%%_random_isbn%%&amp;book%5Bcondition%5D=Good&amp;book%5Bprice%5D=1.11&amp;book%5Bdue_date%282i%29%5D=11&amp;book%5Bdue_date%283i%29%5D=27&amp;book%5Bdue_date%281i%29%5D=2016&amp;book%5Bcomments%5D=test_comment&amp;commit=Create+Book">
        </http>
      </request>

      <request>
        <http url="/balance" version="1.1" method="GET">
        </http>
      </request>

      <request>
        <http url="/users/sign_out" version="1.1" contents="_method=delete" method="POST">
        </http>
      </request>

      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>
      
      <thinktime random="true" value="1"/>
      
      <request>
        <http url="/users/sign_up" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="1"/>

      <setdynvars sourcetype="random_number" start="100000" end="999999">
        <var name="random_email"/>
      </setdynvars>

      <request subst="true">
        <http url="/users" version="1.1" contents="utf8=%E2%9C%93&amp;user%5Bname%5D=test_name&amp;user%5Bemail%5D=test%%_random_email%%%40airbooks.com&amp;user%5Bpassword%5D=tsungtsung&amp;user%5Bpassword_confirmation%5D=tsungtsung&amp;commit=Sign+up" method="POST">
        </http>
      </request>

        <request subst="true">
          <http url="/search/results/?q=%%_random_title%%" version="1.1" method="GET">
          </http>
        </request>

      <thinktime random="true" value="1"/>

        <request>
          <http url="/account" version="1.1" method="GET">
        </http>
        </request>

        <thinktime random="true" value="1"/>

        <request>
          <http url="/balance" version="1.1" method="GET">
        </http>
        </request>

        <thinktime random="true" value="1"/>

        <request>
          <http url="/balance/add" version="1.1" method="GET">
        </http>
        </request>

        <thinktime random="true" value="1"/>

        <request>
        <http url="/balance" version="1.1" contents="utf8=%E2%9C%93&amp;_method=patch&amp;user_balance%5Bbalance%5D=5&amp;user_balance%5Bupdate_type%5D=add&amp;commit=Add+Funds" method="POST">
        </http>
      </request>

      <thinktime random="true" value="1"/>

        <request subst="true">
          <http url="/books/%%_created_book_id%%" version="1.1" method="GET">
          </http>
        </request>

        <thinktime random="true" value="1"/>

        <request subst="true">
          <dyn_variable name="created_transaction_id" re="[Ll]ocation: http://.*/transactions/(.*)\r"/>
          <http url="/transactions/create" version="1.1" method="POST" contents="utf8=%E2%9C%93&amp;book_id=%%_created_book_id%%">
          </http>
        </request>

        <thinktime random="true" value="1"/>

        <request subst="true">
          <http url="/transactions/%%_created_transaction_id%%" version="1.1" contents="_method=delete" method="POST">
          </http>
        </request>

        <request>
          <http url="/users/sign_out" version="1.1" contents="_method=delete" method="POST">
          </http>
        </request>

    </session>
  </sessions>
</tsung>
