<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <!-- don't include http://-->
    <server host="ec2-52-25-191-148.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <!-- 30 - 90 - 150 - 300 -->
    <arrivalphase phase="1" duration="1" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">
        Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4
      </user_agent>
    </option>
  </options>

  <sessions>
    <session name='populate' probability='100'  type='ts_http'>
      <request subst="true">
        <http url='/users' version='1.1'  contents='utf8=%E2%9C%93&amp;user%5Bname%5D=test_name&amp;user%5Bemail%5D=owner%40airbooks.com&amp;user%5Bpassword%5D=tsungtsung&amp;user%5Bpassword_confirmation%5D=tsungtsung&amp;commit=Sign+up' method='POST'>
        </http>
      </request>

      <for from="1" to="100000" incr="1" var="counter">

      <setdynvars sourcetype="random_string" length="8">
        <var name="random_first_name" />
      </setdynvars>
      
      <setdynvars sourcetype="random_string" length="8">
        <var name="random_last_name" />
      </setdynvars>
      
      <setdynvars sourcetype="random_number" start="1000000000" end="9999999999">
        <var name="random_isbn" />
      </setdynvars>

      <request subst="true">
        <http url='/books' version='1.1'  contents='utf8=%E2%9C%93&amp;book%5Btitle%5D=counter&amp;book%5Bauthor%5D=%%_random_first_name%%+%%_random_last_name%%&amp;book%5Bgenre%5D=Non-fiction&amp;book%5Bisbn%5D=%%_random_isbn%%&amp;book%5Bcondition%5D=Good&amp;book%5Bprice%5D=1.11&amp;book%5Bdue_date%282i%29%5D=11&amp;book%5Bdue_date%283i%29%5D=27&amp;book%5Bdue_date%281i%29%5D=2016&amp;book%5Bcomments%5D=test_comment&amp;commit=Create+Book' method='POST'>
        </http>
      </request>
      </for>
 
      </transaction>
    </session>
  </sessions>
</tsung>

