<?xml version="1.0"?><tsung loglevel="notice" version="1.0">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="ec2-52-11-182-159.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="3" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="5" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="10" unit="second"/>
    </arrivalphase>
  </load>

  <options>
    <option name="glocal_ack_timeout" value="2000"/>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">
        Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4
      </user_agent>
    </option>
  </options>

  <sessions>
    <session name="critical-path" probability="100" type="ts_http">
      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>
      
     <thinktime random="true" value="2"/>
      
      <request>
        <http url="/users/sign_up" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="5"/>

      <setdynvars sourcetype="random_number" start="100000" end="999999">
        <var name="random_email"/>
      </setdynvars>

      <request subst="true">
        <http url="/users" version="1.1" contents="utf8=%E2%9C%93&amp;user%5Bname%5D=test_name&amp;user%5Bemail%5D=test%%_random_email%%%40airbooks.com&amp;user%5Bpassword%5D=tsungtsung&amp;user%5Bpassword_confirmation%5D=tsungtsung&amp;commit=Sign+up" method="POST">
        </http>
      </request>

      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="2"/>

      <request>
        <http url="/books/new" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="10"/>

      <setdynvars sourcetype="random_number" start="100000" end="999999">
        <var name="random_title"/>
      </setdynvars>
      
      <request subst="true">
        <http url="/books" version="1.1" contents="utf8=%E2%9C%93&amp;book%5Btitle%5D=%%_random_email%%_%%_random_title%%&amp;book%5Bauthor%5D=test_author1&amp;book%5Bgenre%5D=Non-fiction&amp;book%5Bisbn%5D=111111&amp;book%5Bcondition%5D=Good&amp;book%5Bprice%5D=1.11&amp;book%5Bdue_date%282i%29%5D=11&amp;book%5Bdue_date%283i%29%5D=27&amp;book%5Bdue_date%281i%29%5D=2016&amp;book%5Bcomments%5D=test_comment&amp;commit=Create+Book" method="POST">
        </http>
      </request>

      <request>
        <http url="/" version="1.1" method="GET">
        </http>
      </request>

      <thinktime random="true" value="2"/>

      <request>
        <http url="/search/results/?q=test" version="1.1" method="GET">
        </http>
      </request>

    </session>
  </sessions>
</tsung>
