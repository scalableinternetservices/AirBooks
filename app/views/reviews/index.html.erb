
<p id="notice"><%= notice %></p>

<h1><%= @book.title %> Reviews</h1>

<div class="list-group">
  <% @reviews.each do |review| %>
    <div class="list-group-item clearfix">
      <h4 class="list-group-item-heading">
        <% review.rating.times do |i| %>
          <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        <% end %>&nbsp;
        <%= review.review %>
      </h4>
      <p class="list-group-item-text">By <%= review.user.name %> on 
      <%= review.created_at.to_formatted_s(:long) %></p>
      <%= link_to 'Delete', book_review_path(review.book, review), method: :delete, class: 'btn btn-sm btn-danger pull-left', data: { confirm: 'Are you sure you want to delete this review?' } %>
    </div>
  <% end %>
</div>

<br>
<%= link_to 'New Review', new_book_review_path, class: 'btn btn-info'  %>
&nbsp;
<%= link_to 'Back to Book Info', book_path(@book), class: 'btn btn-default'  %>