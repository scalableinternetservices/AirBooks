<%= form_for(@user, url: profile_path(@user), html: { class: 'form-horizontal'}) do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation text-danger">
    <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this review from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>

  <div class="form-group">
    <%= f.label :name, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :occupation, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :occupation, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :location, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :public_email, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.email_field :public_email, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.phone_field :phone, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :website, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.url_field :website, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :about_me, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :about_me, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :interests, class: 'col-lg-1 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :interests, class: 'form-control' %>
    </div>
    <div class="col-lg-5">
    </div>
  </div>

  

  <div class="form-group">
    <div class="col-lg-11 col-lg-offset-1">
      <%= f.submit 'Update Profile', :class=> 'btn btn-primary' %>
      <%= link_to 'Back', profile_path(@user), class: 'btn btn-warning' %>
    </div>
  </div>

</fieldset>
<% end %>
