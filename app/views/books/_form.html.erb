<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label(:isbn, "ISBN") %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :condition %><br>
    <%= f.select(:condition, @condition_options) %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.date_select(:due_date, :order => [:month, :day, :year]) %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments, :rows => 3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
