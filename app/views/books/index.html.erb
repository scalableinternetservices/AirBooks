<h1>Your Book Listings</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th style="width: 15%"></th>
      <th style="width: 71%"></th>
      <th style="width: 14%"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="text-center">
          <%= link_to book do %>
              <%= image_tag book.image.url(:thumb) %>
          <% end %>
        </td>
        <td>
          <h4><%= link_to book.title, book %></h4>
          <br> by <%= book.author %>
          <br> <%= number_to_currency(book.price) %> per day
          <br> <%= book.condition %>
          <br> Due at <%= book.due_date.strftime('%m/%d/%Y') %>
        </td>

        <td>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary' %>
