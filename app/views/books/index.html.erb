<p id="notice"><%= notice %></p>

<h1>Your Book Listings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Daily Price</th>
      <th>Due Date</th>
      <th colspan="20"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= link_to book.title, book %></strong></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price) %></td>
        <td><%= book.due_date.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure you want to delete this listing?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

