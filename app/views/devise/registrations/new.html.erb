<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
    <div class="text-danger">
      <%= devise_error_messages! %>
    </div>

  <fieldset>
    <div class="form-group">
      <%= f.label :name, class: 'col-lg-1 control-label' %>
      <div class="col-lg-6">
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-lg-1 control-label' %>
      <div class="col-lg-6">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'col-lg-1 control-label' %>
      <div class="col-lg-6">
        <% if @validatable %>
            <%= f.password_field :password, autocomplete: 'off',  class: 'form-control', placeholder: @minimum_password_length.to_s + ' characters minimum' %>
        <% else %>
            <%= f.password_field :password, autocomplete: 'off',  class: 'form-control' %>
        <% end %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-lg-1 control-label' %>
      <div class="col-lg-6">
        <%= f.password_field :password_confirmation, autocomplete: 'off',  class: 'form-control' %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>

    <div class="form-group actions">
      <div class="col-lg-11 col-lg-offset-1">
        <%= f.submit 'Sign up', :class=> 'btn btn-primary' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-11 col-lg-offset-1">
        <%= render 'devise/shared/links' %>
      </div>
    </div>

  </fieldset>
<% end %>


