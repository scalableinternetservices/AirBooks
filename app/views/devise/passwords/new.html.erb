<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <div class="text-danger">
      <%= devise_error_messages! %>
    </div>
    <fieldset>
      <div class="form-group">
        <%= f.label :email, class: 'col-lg-1 control-label' %>
        <div class="col-lg-6">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-lg-5">
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-11 col-lg-offset-1">
          <div class="actions">
            <%= f.submit 'Send me password reset instruction', :class=> 'btn btn-primary' %>
            </div>
        </div>
        </div>
    </fieldset>
<% end %>

<h4><%= render 'devise/shared/links' %></h4>
