<h1>Search Results</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th style="width: 100px"></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td class="text-center">
          <%= link_to book do %>
              <%= image_tag book.image.url(:thumb) %>
          <% end %>
        </td>
        <td>
          <h4><%= link_to book.title, book %></h4>
          <br> by <%= book.author %>
          <br>  <% if number_to_currency(book.price) != '$0.00' %>
                    <%= number_to_currency(book.price) %> per day
                <% else %>
                    Free
                <% end %>
          <br> <%= book.condition %>
          <br> Due at <%= book.due_date.strftime('%m/%d/%Y') %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>